@namespace FitnessPT.Components.Shared
@using FitnessPT.Services
@using FitnessPT.Models
@inject AlertService AlertService
@implements IDisposable

<!-- ⭐ 항상 DOM에 존재, CSS로 표시/숨김 제어 -->
<div class="modal-overlay @(alertState.IsVisible ? "active" : "")" @onclick="HandleOverlayClick">
    <div class="alert-modal" @onclick:stopPropagation>
        <div class="alert-icon">
            @IconEmoji
        </div>

        <h3 class="alert-title">@alertState.Title</h3>
        <p class="alert-message">@alertState.Message</p>

        <div class="alert-buttons">
            @if (alertState.ShowCancelButton)
            {
            <button class="btn btn-secondary" @onclick="HandleCancel">
                @alertState.CancelButtonText
            </button>
            }
            <button class="btn @ConfirmButtonClass" @onclick="HandleConfirm">
                @alertState.ConfirmButtonText
            </button>
        </div>
    </div>
</div>